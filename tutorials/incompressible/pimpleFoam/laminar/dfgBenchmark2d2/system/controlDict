FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     pimpleFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         5;

deltaT          0.001;

writeControl    runTime;

writeInterval   0.05;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

functions
{
  #includeFunc  vorticity
  #includeFunc writeObjects(vorticity)
  suppressOutput
  {
    type writeObjects;
    libs ("libutilityFunctionObjects.so");
    objects (U p phi);
    writeOption noWrite;
  }
  systemCall1
  {
      type        systemCall;
      libs        ("libutilityFunctionObjects.so");
      writeCalls
      (
          "echo \*\*\* scraping data at time $(ls -d [0-9]* | sort -n | tail -1) \*\*\*"
          "echo '*** and more ***'"
          "VORTICITY=$(ls -d [0-9]* | sort -n | tail -1)/vorticity eval 'cat $VORTICITY && rm $VORTICITY' >>vorticity.txt"
          "echo '*** done ***'"
      );
      writeControl writeTime;
      writeInterval 1;
  }
}
// ************************************************************************* //
